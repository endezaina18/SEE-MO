<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/previewFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >
  
         <ToggleButton
             android:id="@+id/LightButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textOn="@string/light"
             android:textOff="@string/light"
             android:onClick="onLightButton" />
  
         <ToggleButton
             android:id="@+id/AutoFocusButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textOn="@string/auto_focus"
             android:textOff="@string/auto_focus"
             android:onClick="onAutoFocusButton" />
  
         <ToggleButton
             android:id="@+id/SoundButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textOn="@string/sound"
             android:textOff="@string/sound"
             android:onClick="onSoundButton" />
         
     </LinearLayout>

</LinearLayout>
