<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/previewFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >
  
         <Button
             android:id="@+id/memoButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="リスト" />
  
         <ToggleButton
             android:id="@+id/AutoFocusButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textOn="オートフォーカス"
             android:textOff="オートフォーカス"
             android:onClick="onAutoFocusButton" />
  
         <ToggleButton
             android:id="@+id/SoundButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textOn="サウンド ON"
             android:textOff="サウンド OFF"
             android:onClick="onSoundButton" />
         
     </LinearLayout>

</LinearLayout>
</android.support.constraint.ConstraintLayout>